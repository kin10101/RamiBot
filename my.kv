    SoEInfo2Window:

<MainWindow>:
    name: "first"
    Image:
        source: 'main bg.png'
        allow_stretch: True
        keep_ratio: False

    GridLayout:
        cols: 1
        size_hint: (0.7, 0.8)
        pos_hint: {"x":0.15, "y":0.15}
        Label:
            text: "Faculty Schedule"
            font_size: 75
            bold: True

        Button:
            text: "Senior High School"
            size_hint:(1.2, 0.5)
            font_size: 25
            background_color: 6/255.0, 38/255.0, 201/255.0, 0.5
            on_release:
                app.root.current = "shs"
                root.manager.transition.direction = "left"
        Button:
            text: "College Department"
            size_hint:(1.2, 0.45)
            font_size: 25
            background_color: 6/255.0, 38/255.0, 201/255.0, 0.5
            on_release:
                app.root.current = "college"
                root.manager.transition.direction = "left"
        Button:
            text: "Graduate School"
            size_hint:(1.2, 0.5)
            font_size: 25
            background_color: 6/255.0, 38/255.0, 201/255.0, 0.5
            on_release:
                app.root.current = "gradschool"
                root.manager.transition.direction = "left"
        Button:
            text: "Offices"
            size_hint:(1.2, 0.5)
            font_size: 25
            background_color: 6/255.0, 38/255.0, 201/255.0, 0.5
            on_release:
                app.root.current = "offices"
                root.manager.transition.direction = "left"

