MDScreen:
    name: 'facultyinfo'

    MDFloatLayout: # main layout
        orientation: 'vertical'

        Image: # Background image
            source: 'Assets/main_bg.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1

        #Back Button
        MDIconButton:
            icon: 'arrow-left'
            pos_hint: {'center_x': 0.1, 'center_y': 0.9}
            user_font_size: "40sp"
            on_press: root.manager.current = 'facultyscheds'
            root.manager.transition.direction = 'right'

        MDBoxLayout: # Square transparent container
            orientation: 'vertical'
            size_hint: .8, .9
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            md_bg_color: 0.1, 0.1, 0.1, 0.1
            padding: 10
            radius: [15]

            MDLabel: # Title
                id: facultyLabel
                text: ' '
                font_name: 'Poppins'
                font_size: "45sp"
                halign: 'center'
                text_color: 1, 1, 1, 1
                pos_hint: {"x": 0, "y": .81}
                size_hint: 1, None
                bold: True
                #label background
                size: self.texture_size[0] + dp(10), self.texture_size[1] + dp(10)
                canvas.before:
                    Color:
                        rgba: .003, .4, .6, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

            MDScrollView: # ScrollView for Buttons
                do_scroll_x: False

                MDGridLayout: # Layout for Buttons
                    cols: 2
                    rows: 3
                    padding: 10
                    spacing: 25
                    size_hint_y: None
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    height: self.minimum_height

                    Image: # Background image
                        id: facultyImage
                        source: ' '
                        allow_stretch: False
                        keep_ratio: True
                        size_hint: 0.2, 0.4

                    GridLayout:
                        cols: 1
                        rows: 3
                        padding: 10
                        spacing: 18
                        size_hint_y: None
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        height: self.minimum_height

                        Label:
                            text: 'Sir Tiny'
                            font_name: 'Poppins'
                            font_size: "34sp"
                            halign: 'center'
                            text_color: 1, 1, 1, 1
                            size_hint: .5, None
                            pos_hint: {"X": 0.5}
                            #label background
                            size: self.texture_size[0] + dp(10), self.texture_size[1] + dp(10)
                            canvas.before:
                                Color:
                                    rgba: .1, .1, .1, .2
                                Rectangle:
                                    pos: self.pos
                                    size: self.size
                        Label:
                            text: 'Engr. Einstein D. Yong'
                            font_name: 'Poppins'
                            font_size: "34sp"
                            halign: 'center'
                            text_color: 1, 1, 1, 1
                            size_hint: .5, None
                            pos_hint: {'center_x': 0.5}
                            #label background
                            size: self.texture_size[0] + dp(10), self.texture_size[1] + dp(10)
                            canvas.before:
                                Color:
                                    rgba: .1, .1, .1, .2
                                Rectangle:
                                    pos: self.pos
                                    size: self.size
                        Label:
                            text: '[schedule]'
                            font_name: 'Poppins'
                            font_size: "34sp"
                            halign: 'center'
                            text_color: 1, 1, 1, 1
                            size_hint: .7, None
                            pos_hint: {'center_x': 0.5}
                            #label background
