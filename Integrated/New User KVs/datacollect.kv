#go here to scan face
MDScreen:
    name: 'datacollect'

    MDFloatLayout: # main layout
        orientation: 'vertical'

        Image: # Background image
            source: 'Assets/facerecogbg.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1


        GridLayout:
            cols: 1
            Camera:
                play: True
                index: 0
                size_hint: (1, 0.9)  # Adjust the size_hint as needed
                size: (self.width, self.width / 1.5)

