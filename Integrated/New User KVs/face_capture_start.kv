#go here if face capture is start
<Popups>:
    name: 'facecapturestart'

    MDGridLayout: # main layout
        cols: 1

        Image: # Background image
            source: 'Assets/start_face_scan.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1

        MDFillRoundFlatButton:
                        text: 'OK'
                        font_name: 'Poppins'
                        font_size: "24sp"
                        halign: 'center'
                        text_color: 1, 1, 1, 1
                        md_bg_color: .003, .4, .6, 1
                        size_hint: .7, None
                        pos_hint: {'center_x': 0.5}
                        padding: 30
                        on_release:
                            app.add_visitor_user_to_db()
                            app.captures()
                            root.manager.current = 'newuser'
                            root.manager.transition.direction = 'left'


        MDFillRoundFlatButton:
                        text: 'OK'
                        font_name: 'Poppins'
                        font_size: "24sp"
                        halign: 'center'
                        text_color: 1, 1, 1, 1
                        md_bg_color: .003, .4, .6, 1
                        size_hint: .7, None
                        pos_hint: {'center_x': 0.5}
                        padding: 30
                        on_release:
                            app.add_visitor_user_to_db()
                            app.captures()
                            root.manager.current = 'datacollect'
                            root.manager.transition.direction = 'left'
