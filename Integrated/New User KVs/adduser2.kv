# go here if user is a guest
MDScreen:
    name: 'adduser2'

    MDFloatLayout: # main layout
        orientation: 'vertical'

        Image: # Background image
            source: 'Assets/main_bg.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1

        #Back Button
        MDIconButton:
            icon: 'arrow-left'
            pos_hint: {'center_x': 0.1, 'center_y': 0.9}
            user_font_size: "40sp"
            on_press: root.manager.current = 'login'

        MDBoxLayout: # Square transparent container
            orientation: 'vertical'
            size_hint: .8, .9
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            md_bg_color: 0.1, 0.1, 0.1, 0.1
            padding: 10
            radius: [15]

            MDLabel: # Title
                text: 'Please provide the needed information:'
                font_name: 'Poppins'
                font_size: "34sp"
                halign: 'center'
                text_color: 1, 1, 1, 1
                pos_hint: {"x": 0, "y": .85}
                size_hint: 1, .2
                bold: True

            MDScrollView: # ScrollView for Buttons
                do_scroll_x: False

                MDGridLayout: # Layout for Buttons
                    cols: 2
                    padding: 10
                    spacing: 25
                    size_hint_y: None
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    height: self.minimum_height

                    Label:
                        text: 'Enter your given name:'
                        font_name: 'Poppins'
                        font_size: "34sp"
                        halign: 'center'
                        text_color: 1, 1, 1, 1
                        size_hint: .7, None
                        pos_hint: {'center_x': 0.5}

                    TextInput:
                        id: given_name
                        multiline: False
                        hint_text: 'Type here...'
                        font_name: 'Poppins'
                        font_size: "34sp"
                        halign: 'center'
                        text_color: 1, 1, 1, 1
                        size_hint: .7, None
                        pos_hint: {'center_x': 0.5}

                    Label:
                        text: 'Enter your middle initial:'
                        font_name: 'Poppins'
                        font_size: "34sp"
                        halign: 'center'
                        text_color: 1, 1, 1, 1
                        size_hint: .7, None
                        pos_hint: {'center_x': 0.5}

                    TextInput:
                        id: middle_initial
                        multiline: False
                        hint_text: 'Type here...'
                        font_name: 'Poppins'
                        font_size: "34sp"
                        halign: 'center'
                        text_color: 1, 1, 1, 1
                        size_hint: .7, None
                        pos_hint: {'center_x': 0.5}

                    Label:
                        text: 'Enter your last name:'
                        font_name: 'Poppins'
                        font_size: "34sp"
                        halign: 'center'
                        text_color: 1, 1, 1, 1
                        size_hint: .7, None
                        pos_hint: {'center_x': 0.5}

                    TextInput:
                        id: last_name
                        multiline: False
                        hint_text: 'Type here...'
                        font_name: 'Poppins'
                        font_size: "34sp"
                        halign: 'center'
                        text_color: 1, 1, 1, 1
                        size_hint: .7, None
                        pos_hint: {'center_x': 0.5}

                    Label:
                        text: 'Enter your nickname:'
                        font_name: 'Poppins'
                        font_size: "34sp"
                        halign: 'center'
                        text_color: 1, 1, 1, 1
                        size_hint: .7, None
                        pos_hint: {'center_x': 0.5}

                    TextInput:
                        id: nickname
                        multiline: False
                        hint_text: 'Type here...'
                        font_name: 'Poppins'
                        font_size: "34sp"
                        halign: 'center'
                        text_color: 1, 1, 1, 1
                        size_hint: .7, None
                        pos_hint: {'center_x': 0.5}

                    Label:
                        text: 'Enter your profession:'
                        font_name: 'Poppins'
                        font_size: "34sp"
                        halign: 'center'
                        text_color: 1, 1, 1, 1
                        size_hint: .7, None
                        pos_hint: {'center_x': 0.5}

                    TextInput:
                        id: profession
                        multiline: False
                        hint_text: '(ex: Guest/Parent/Visitor)'
                        font_name: 'Poppins'
                        font_size: "34sp"
                        halign: 'center'
                        text_color: 1, 1, 1, 1
                        size_hint: .7, None
                        pos_hint: {'center_x': 0.5}

                    MDFillRoundFlatButton:
                        text: 'Cancel'
                        font_name: 'Poppins'
                        font_size: "24sp"
                        halign: 'center'
                        text_color: 1, 1, 1, 1
                        md_bg_color: .003, .4, .6, 1
                        size_hint: .7, None
                        pos_hint: {'center_x': 0.5}
                        padding: 30
                        on_release:
                            root.manager.current = 'userstatus'
                            root.manager.transition.direction = 'right'

                    MDFillRoundFlatButton:
                        text: 'Enter'
                        font_name: 'Poppins'
                        font_size: "24sp"
                        halign: 'center'
                        text_color: 1, 1, 1, 1
                        md_bg_color: .003, .4, .6, 1
                        size_hint: .7, None
                        pos_hint: {'center_x': 0.5}
                        padding: 30
                        on_release:
                            app.add_VisitorUser_to_db()
                            root.manager.current = 'datacollect'
                            root.manager.transition.direction = 'left'
