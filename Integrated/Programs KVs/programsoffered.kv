MDScreen:
    name: 'programsoffered'

    MDFloatLayout: # main layout
        orientation: 'vertical'

        Image: # Background image
            source: 'Assets/main_bg.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1

        #Back Button
        MDIconButton:
            icon: 'arrow-left'
            pos_hint: {'center_x': 0.1, 'center_y': 0.9}
            user_font_size: "40sp"
            on_press:
                root.manager.current = 'mainmenu'
                root.manager.transition.direction = 'right'

        MDBoxLayout: # Square transparent container
            orientation: 'vertical'
            size_hint: .8, .9
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            md_bg_color: 0.1, 0.1, 0.1, 0.1
            padding: 10
            radius: [15]

            MDLabel: # Title
                text: 'Programs Offered'
                font_name: 'Poppins'
                font_size: "48sp"
                halign: 'center'
                text_color: 1, 1, 1, 1
                pos_hint: {"x": 0, "y": .85}
                size_hint: 1, .2
                bold: True

            MDScrollView: # ScrollView for Buttons
                do_scroll_x: False

                MDBoxLayout: # Buttons
                    orientation: 'vertical'
                    padding: 10
                    spacing: 25
                    size_hint_y: None
                    height: self.minimum_height

                    MDFillRoundFlatButton:
                        text: 'Senior High School'
                        font_name: 'Poppins'
                        font_size: "24sp"
                        halign: 'center'
                        text_color: 1, 1, 1, 1
                        md_bg_color: .003, .4, .6, 1
                        size_hint: .7, None
                        pos_hint: {'center_x': 0.5}
                        padding: 30
                        on_release:
                            root.manager.current = 'programs'
                            root.manager.transition.direction = 'left'
                            app.update_image("programs", "programImage", "Programs KVs/shs.png")

                    MDFillRoundFlatButton:
