MDScreen:
    name: 'idlescreen'
    on_enter:
        app.start_face_thread()
        app.start_timer()
        app.clear_event()
        app.set_face_blink()
        app.schedule_idle_announcement()
    on_pre_leave:
        app.on_gpio(4, 1)
        app.close_camera()
        app.unschedule_idle_announcement()





    MDFloatLayout: # main layout


        orientation: 'vertical'

        Image: # Background image
            id: face
            source: ' rami_faces/smile.png'
            allow_stretch: False
            keep_ratio: True
            size_hint: 1, 1
            on_touch_down: app.root.current = 'mainmenu'

