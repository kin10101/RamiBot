MDScreen:
    name: 'calendars'

    MDFloatLayout: # main layout
        orientation: 'vertical'

        Image: # Background image
            source: 'Assets/main_bg.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1

        #Back Button
        MDIconButton:
            icon: 'arrow-left'
            pos_hint: {'center_x': 0.1, 'center_y': 0.9}
            user_font_size: "40sp"
            on_press:
                root.manager.current = 'announcements'
                root.manager.transition.direction = 'right'

        MDBoxLayout: # Square transparent container
            orientation: 'vertical'
            size_hint: .8, .9
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            md_bg_color: 0.1, 0.1, 0.1, 0.1
            padding: 10
            radius: [15]

            MDLabel: # Title
                text: 'Academic Calendars'
                font_name: 'Poppins'
                font_size: "34sp"
                halign: 'center'
                text_color: 1, 1, 1, 1
                pos_hint: {"x": 0, "y": .85}
                size_hint: 1, .2
                bold: True

            MDScrollView: # ScrollView for Buttons
                do_scroll_x: False

                MDBoxLayout: # Buttons
                    orientation: 'vertical'
                    padding: 10
                    spacing: 30
                    size_hint_y: None
                    height: self.minimum_height

                    MDLabel: # Title
                        text: 'Senior High School Academic Calendar'
                        font_name: 'Poppins'
                        font_size: "34sp"
                        halign: 'center'
                        text_color: 1, 1, 1, 1
                        pos_hint: {"x": 0, "y": .85}
                        size_hint: 1, .2
                        bold: True
                        #label background
                        size: self.texture_size[0] + dp(10), self.texture_size[1] + dp(10)
                        canvas.before:
                            Color:
                                rgba: .003, .4, .6, .5
                            Rectangle:
                                pos: self.pos
                                size: self.size

                    MDFillRoundFlatButton:
                        text: 'Senior High School Calendar: A.Y. 2023-2024'
                        font_name: 'Poppins'
                        font_size: "24sp"
                        halign: 'center'
                        text_color: 1, 1, 1, 1
                        md_bg_color: .003, .4, .6, 1
                        size_hint: .7, None
                        pos_hint: {'center_x': 0.5}
                        padding: 30
                        on_press:
                            root.manager.current = 'calendarInfo'
                            root.manager.transition.direction = 'left'
                            #app.update_label("floor", "floorLabel", "1ST FLOOR")
                            app.update_image("calendarInfo", "calendarImage", "Announcements KVs/shs1.png")

                    MDFillRoundFlatButton:
