MDScreen:
    name: 'orgsInfo'

    MDFloatLayout: # main layout
        orientation: 'vertical'

        Image: # Background image
            source: 'Assets/main_bg.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1

            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.5  # Adjust the opacity here (0.5 for 50% opacity)
                Rectangle:
                    size: self.size
                    pos: self.pos
        #Back Button
        MDIconButton:
            icon: 'arrow-left'
            pos_hint: {'center_x': 0.1, 'center_y': 0.9}
            user_font_size: "40sp"
            on_press:
                root.manager.current = 'orgs'
                root.manager.transition.direction = 'right'

        MDBoxLayout: # Square transparent container
            orientation: 'vertical'
            size_hint: .8, .9
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            md_bg_color: 0.1, 0.1, 0.1, 0.1
            padding: 10
            radius: [15]

            Image: # Background image
                id: calendarImage
                source: ' '
                allow_stretch: True
                keep_ratio: False
                size_hint: 1, 1

        MDLabel: # Title
            id: orgsLabel
            text: ' '
            font_name: 'Poppins'
            font_size: "34sp"
            halign: 'center'
            text_color: 1, 1, 1, 1
            pos_hint: {"x": 0, "y": .75}
            size_hint: 1, .2
            bold: True