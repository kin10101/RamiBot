                        text: 'School of Management'
                        font_name: 'Poppins'
                        font_size: "34sp"
                        halign: 'center'
                        text_color: 1, 1, 1, 1
                        size_hint: .7, None
                        pos_hint: {'center_x': 0.5}
                        bold: True
                        #label background
                        size: self.texture_size[0] + dp(10), self.texture_size[1] + dp(10)
                        canvas.before:
                            Color:
                                rgba: .1, .1, .1, .2
                            Rectangle:
