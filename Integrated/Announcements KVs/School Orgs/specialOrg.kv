MDScreen:
    name: 'specialOrg'

    MDFloatLayout: # main layout
        orientation: 'vertical'

        Image: # Background image
            source: 'Assets/main_bg.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1

        # Back Button
        MDIconButton:
            icon: 'arrow-left'
            pos_hint: {'center_x': 0.1, 'center_y': 0.9}
            user_font_size: "40sp"
            on_press:
                root.manager.current = 'orgs'
                root.manager.transition.direction = 'right'

        MDBoxLayout: # Square transparent container
            orientation: 'vertical'
            size_hint: .8, .9
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            md_bg_color: 0.1, 0.1, 0.1, 0.1
            padding: 10
            radius: [15]

        ScrollView:
            size_hint: 0.78, 0.88
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            MDGridLayout: # GridLayout for images
                cols: 1
               # rows: 4
                size_hint_y: None
                height: self.minimum_height
               # spacing: 10

                Image:
                    id: orgImage1
                    source: ' '
                    allow_stretch: True
                    keep_ratio: False
                    size_hint_y: None
                    height: dp(1000)  # Adjust the height as needed

                Image:
                    id: orgImage2
                    source: ' '
                    allow_stretch: True
                    keep_ratio: False
                    size_hint_y: None
                    height: dp(1000)  # Adjust the height as needed