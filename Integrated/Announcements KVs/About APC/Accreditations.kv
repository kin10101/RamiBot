MDScreen:
    name: 'accreds'

    MDFloatLayout: # main layout
        orientation: 'vertical'

        Image: # Background image
            source: 'Assets/main_bg.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1

            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.5  # Adjust the opacity here (0.5 for 50% opacity)
                Rectangle:
                    size: self.size
                    pos: self.pos

        # Back Button
        MDIconButton:
            icon: 'arrow-left'
            pos_hint: {'center_x': 0.1, 'center_y': 0.9}
            user_font_size: "40sp"
            on_press:
                root.manager.current = 'announcements'
                root.manager.transition.direction = 'right'

        MDBoxLayout: # Square transparent container
            orientation: 'vertical'
            size_hint: .8, .9
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            md_bg_color: 0.1, 0.1, 0.1, 0.1
            padding: 10
            radius: [15]

            MDLabel: # Title
                text: 'Accreditations and Certification'
                font_name: 'Poppins'
                font_size: "48sp"
                #halign: 'center'
                text_color: 1, 1, 1, 1
                pos_hint: {"x": 0.05, "y": .75}
                size_hint: 1, .2
                bold: True

            MDScrollView: # ScrollView for Buttons
                do_scroll_x: False

                MDGridLayout:
                    id: image_grid
                    cols: 2
                    size_hint: (0.8, 0.9)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    adaptive_height: True


        Image:
            source: 'Assets/logo.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: .21, .18
            pos_hint: {'center_x': 0.81, 'center_y': 0.083}
