MDScreen:
    name: 'School_Information'

    on_pre_enter:
        app.create_button_list_to_button_list(app.School_Information)

    on_pre_leave:
        app.previous_screen = 'Main_Menu'
    MDFloatLayout: # main layout

        orientation: 'vertical'

        Image: # Background image
            id: bg
            source: 'Assets/main_bg.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1

           #Back Button
        MDFlatButton:
            size: 125, 125
            pos_hint: {'center_x': 0.1, 'center_y': 0.5}

            on_press:
                app.root.current = "Main_Menu"
            Image:
                source: 'Assets/back_button.png'


        MDBoxLayout: # Square transparent container
            orientation: 'vertical'
            size_hint: .8, .9
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            md_bg_color: 0.1, 0.1, 0.1, 0.1
            padding: 10
            radius: [15]

            MDLabel: # Title
                id: transcribed_text
                text: 'What can I help you with?'
                font_name: 'Poppins'
                font_size: "48sp"
                halign: 'center'
                text_color: 1, 1, 1, 1
                pos_hint: {"x": 0, "y": .85}
                size_hint: 1, .2
                bold: True

            MDScrollView: # ScrollView for Buttons
                do_scroll_x: False

                MDBoxLayout: # Layout for Buttons
                    id: button_layout
                    orientation: 'vertical'
                    padding: 10
                    spacing: 25
                    size_hint_y: None
                    height: self.minimum_height

        MDFlatButton:
            id: chatbot_button
            size: 390, 234
            user_font_size: "200sp"
            pos_hint: {'center_x': 0.88, 'center_y': 0.1}
            on_press: app.root.current = 'chatscreen'
            Image:
                source: 'Assets/chatbot_button.png'
                size: 100, 100
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                allow_stretch: True
                keep_ratio: False
                size_hint: 1, 1

        MDFlatButton:
            id: voicebot_button
            size: 390, 234
            user_font_size: "200sp"
            pos_hint: {'center_x': 0.12, 'center_y': 0.1}
            on_press: app.root.current = 'chatscreen'
            Image:
                source: 'Assets/voicebot_button.png'
                size: 100, 100
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                allow_stretch: True
                keep_ratio: False
                size_hint: 1, 1



