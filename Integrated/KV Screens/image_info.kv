MDScreen:
    name: 'image_info'

    on_enter:
        print(app.previous_screen)


    MDFloatLayout: # main layout
        orientation: 'vertical'

        Image: # Background image
            source: 'Assets/main_bg.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1




        MDBoxLayout: # Square transparent container
            orientation: 'vertical'
            size_hint: .8, .9
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            md_bg_color: 0.1, 0.1, 0.1, 0.1
            padding: 10
            radius: [15]

            Image: # Background image
                id: img
                source: "/home/rami/PycharmProjects/RamiBot/Integrated/Assets/logo.png"
                allow_stretch: True
                keep_ratio: True
                size_hint: 1, 1
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        #Back Button
        MDFlatButton:
            size: 125, 125
            pos_hint: {'center_x': 0.1, 'center_y': 0.5}

            on_press:
                app.root.current = app.previous_screen
            Image:
                source: 'Assets/back_button.png'