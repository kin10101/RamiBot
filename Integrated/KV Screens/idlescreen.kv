MDScreen:
    name: 'idlescreen'
    on_enter:
        app.start_face_thread()
        app.start_timer()
        app.schedule_idle_announcement()
    on_pre_leave:
        app.off_motor()
        #app.close_camera()
        app.start_timer()

        app.unschedule_idle_announcement()


    MDFloatLayout: # main layout


        orientation: 'vertical'

        Image: # Background image
            id: face
            source: 'rami_faces/smile.png'
            allow_stretch: False
            keep_ratio: True
            size_hint: 1, 1
            on_touch_down: app.root.current = 'Main_Menu'

