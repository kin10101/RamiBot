<MainWindow>:
    name: "first"
    Image:
        source: 'bg.png'
        allow_stretch: True
        keep_ratio: False

    GridLayout:
        cols: 1
        size_hint: (0.8, 0.8)
        pos_hint: {"x":0.1, "y":0.15}
        Label:
            text: "Programs Offered"
            font_size: 90
            bold: True
            color: 1/255.0, 50/255.0, 77/255.0, 1
        GridLayout:
            cols: 7
            size_hint: (0.9, 2)
            Button:
                background_normal: 'shs.png'
                on_release:
                    app.root.current = "shs"
                    root.manager.transition.direction = "left"
            Button:
                background_normal: 'soe.png'
                on_release:
                    app.root.current = "soe"
                    root.manager.transition.direction = "left"
            Button:
                background_normal: 'socit.png'
                on_release:
                    app.root.current = "socit"
                    root.manager.transition.direction = "left"
            Button:
                background_normal: 'soma.png'
                on_release:
                    app.root.current = "soma"
                    root.manager.transition.direction = "left"
            Button:
                background_normal: 'som.png'
                on_release:
                    app.root.current = "som"
                    root.manager.transition.direction = "left"
            Button:
                background_normal: 'soa.png'
                on_release:
                    app.root.current = "soa"
                    root.manager.transition.direction = "left"
            Button:
                background_normal: 'gs.png'
                on_release:
                    app.root.current = "gs"
                    root.manager.transition.direction = "left"
