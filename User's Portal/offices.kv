<OfficesMain>:
    name: "first"
    Image:
        source: 'bg.png'
        allow_stretch: True
        keep_ratio: False
    Label:
        text: "Offices and Floor Maps"
        font_size: 70
        bold: True
        pos_hint: {"x":0.01, "y":0.27}

    GridLayout:
        cols: 1
        size_hint: (0.7, 0.25)
        pos_hint: {"x":0.15, "y":0.40}
        Button:
            text: "Office Schedules"
            size_hint:(1.2, 0.4)
            font_size: 45
            background_color: 6/255.0, 38/255.0, 201/255.0, 0.5
            on_release:
                app.root.current = "scheds"
                root.manager.transition.direction = "left"
        Button:
            text: "Floor Maps"
            size_hint:(1.2, 0.4)
            font_size: 45
            background_color: 6/255.0, 38/255.0, 201/255.0, 0.5
            on_release:
                app.root.current = "floor"
                root.manager.transition.direction = "left"


