<PopupContent>:
    FloatLayout:
        orientation: 'vertical'
        Image:
            source: 'start_face_scan.png'  # Replace 'image.png' with your image file
            allow_stretch: True
            keep_ratio: False
            size_hint: 1,1
            pos_hint: {'center_x':0.5, 'center_y': 0.5}
        BoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_x':0.5, 'center_y': 0.1}

            Button:
                text: "Cancel"
                halign: 'center'
                size_hint: .7, None
                size: 100, 50
                pos_hint: {'center_x':2, 'center_y': 0.47}
                background_color: .003, .4, .6, 1
                on_press: root.cancel_button()

            Button:
                text: "OK"
                halign: 'center'
                size_hint: .7, None
                size: 100, 50
                pos_hint: {'center_x':2, 'center_y': 0.47}
                background_color: .003, .4, .6, 1
                on_press: root.ok_button()

