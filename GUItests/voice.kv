MDScreen:
    name: "voice"

    MDFloatLayout:
        MDFloatLayout:
            md_bg_color: 245/255, 245/255, 245/255, 1
            size_hint_y: .11
            pos_hint: {"center_y": .95}

            MDLabel:
                id: bot_name
                text: "Voice GUI"
                pos_hint: {"center_x": .5, "center_y": .5}
                halign: "center"
                font_size: "20sp"
                font_name: "Poppins"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
            MDRoundFlatButton:
                text: "Back"
                pos_hint: {"center_x": .1, "center_y": .5}
                font_size: "18sp"
                font_name: "Poppins"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
                on_release: root.manager.current = 'demo'
                transition: "fade"

            MDIconButton:
                icon: "microphone"
                pos_hint: {"center_x": .9, "center_y": .5}
                user_font_size: "40sp"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
                on_release: root.manager.current = 'voice'
                transition: "fade"



