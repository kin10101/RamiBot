MDScreen:
    name: 'specialOrg'

    MDFloatLayout: # main layout
        orientation: 'vertical'

        Image: # Background image
            source: 'Assets/main_bg.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1

        #Back Button
        MDIconButton:
            icon: 'arrow-left'
            pos_hint: {'center_x': 0.1, 'center_y': 0.9}
            user_font_size: "40sp"
            on_press:
                root.manager.current = 'orgs'
                root.manager.transition.direction = 'right'

        MDBoxLayout: # Square transparent container
            orientation: 'vertical'
            size_hint: .8, .9
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            md_bg_color: 0.1, 0.1, 0.1, 0.1
            padding: 10
            radius: [15]

            MDScrollView: # ScrollView for Buttons
                do_scroll_x: False

                MDGridLayout: # Layout for Buttons
                    cols: 2
                    rows: 3
                    padding: 10
                    spacing: 25
                    size_hint_y: None
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    height: self.minimum_height

                    Image: # Background image
                        id: orgImage1
                        source: ' '
                        allow_stretch: True
                        keep_ratio: False
                        size_hint: 0.2, 0.4
                    Image: # Background image
                        id: orgImage2
                        source: ' '
                        allow_stretch: True
                        keep_ratio: False
                        size_hint: 0.2, 0.4

