MDScreen:
    name: 'acadsOrg'

    MDFloatLayout: # main layout
        orientation: 'vertical'

        Image: # Background image
            source: 'Assets/main_bg.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1

        # Back Button
        MDIconButton:
            icon: 'arrow-left'
            pos_hint: {'center_x': 0.1, 'center_y': 0.9}
            user_font_size: "40sp"
            on_press:
                root.manager.current = 'orgs'
                root.manager.transition.direction = 'right'

        MDBoxLayout: # Square transparent container
            orientation: 'vertical'
            size_hint: .8, .9
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            md_bg_color: 0.1, 0.1, 0.1, 0.1
            padding: 10
            radius: [15]

        ScrollView:
            size_hint: 0.78, 0.88
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            MDGridLayout: # GridLayout for images
                cols: 1
               # rows: 4
                size_hint_y: None
                height: self.minimum_height
                spacing: 10

                Label:
                    text: 'School Of Engineering'
                    font_name: 'Poppins'
                    font_size: "34sp"
                    halign: 'center'
                    text_color: 1, 1, 1, 1
                    size_hint: .5, None
                    pos_hint: {"X": 0.5}
                    #label background
                    size: self.texture_size[0] + dp(10), self.texture_size[1] + dp(10)
                    canvas.before:
                        Color:
                            rgba: .1, .1, .1, .5
                        Rectangle:
                            pos: self.pos
                            size: self.size
                Image:
                    id: orgImage1
                    source: ' '  # Replace with actual image path
                    allow_stretch: True
                    keep_ratio: False
                    size_hint_y: None
                    height: dp(1000)  # Adjust the height as needed

                Label:
