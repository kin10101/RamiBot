MDScreen:
    name: 'Floor_Maps'

    on_enter:
        app.create_button_list_to_image_info(app.Floor_Maps)

    MDFloatLayout: # main layout


        orientation: 'vertical'

        Image: # Background image
            id: bg
            source: 'Assets/main_bg.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1

           #Back Button
        MDIconButton:
            icon: 'arrow-left'
            pos_hint: {'center_x': 0.1, 'center_y': 0.9}
            user_font_size: "40sp"
            on_press:
                app.root.current = "Main_Menu"


        MDBoxLayout: # Square transparent container
            orientation: 'vertical'
            size_hint: .8, .9
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            md_bg_color: 0.1, 0.1, 0.1, 0.1
            padding: 10
            radius: [15]

            MDLabel: # Title
                text: 'What can I help you with?'
                font_name: 'Poppins'
                font_size: "48sp"
                halign: 'center'
                text_color: 1, 1, 1, 1
                pos_hint: {"x": 0, "y": .85}
                size_hint: 1, .2
                bold: True

            MDScrollView: # ScrollView for Buttons
                do_scroll_x: False

                MDBoxLayout: # Layout for Buttons
                    id: button_layout
                    orientation: 'vertical'
                    padding: 10
                    spacing: 25
                    size_hint_y: None
                    height: self.minimum_height

        Button:
            size_hint: None, None
            size: 250, 80
            background_normal: 'Assets/chatbot icon.png'
            background_color: 208/255,233/255,245/255,1
            pos_hint: {'center_x': 0.9, 'center_y': 0.062}
            background_scale: 'fit'
            border_radius: [100]
