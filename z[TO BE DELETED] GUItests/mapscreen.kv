MDScreen:
    name: 'mapscreen'  # Screen name

    MDFloatLayout: # main layout
        id: main_layout
        orientation: 'vertical'

        MDBoxLayout: # Info Layout
            id: info_layout
            orientation: 'vertical'
            pos_hint: {'center_y': 0.14}
            size_hint: 1, 0.25
            padding: 10, 10, 10, 10
            md_bg_color: .5, .8, .9, 1

            MDLabel: # Description info Label
                id: descr
                text: 'The Accounting Office and Finance Office is responsible for the financial management of the University.'
                font_name: 'Poppins'
                font_size: '20sp'
                text_color: 1, 1, 1, 1
                pos_hint: {'center_x': .5, 'center_y': 0.5}
                halign: 'center'

            MDLabel: # Floor info Label
                id: floor
                text: 'Floor: 2nd Floor'
                font_name: 'Poppins'
                font_size: '20sp'
                text_color: 1, 1, 1, 1
                pos_hint: {'center_x': .5, 'center_y': 0.5}
                halign: 'center'

            MDLabel: # Schedule info Label
                id: sched
                text: 'Schedule: 8:00 AM - 5:00 PM'
                font_name: 'Poppins'
                font_size: '20sp'
                text_color: 1, 1, 1, 1
                pos_hint: {'center_x': .5, 'center_y': 0.5}
                halign: 'center'



        Image: # Background image
            id: bg_img
            source: 'Assets/main_bg.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: .95,.45
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        MDBoxLayout: # Title layout
            id : title_layout
            orientation: 'horizontal'
            pos_hint: {'center_y': 0.85}
            size_hint: 1, 0.12
            padding: 10, 10, 10, 10
            spacing: 10
            md_bg_color: .5, .8, .9, 1

            MDIconButton: # Back Button
                id: back_btn
                icon: 'arrow-left'
                user_font_size: '30sp'
                pos_hint: {'center_x': 0.1, 'center_y': 0.9}
                on_press:
                    app.update_labels()
                    root.manager.current = 'main'
                    root.manager.transition.direction = 'right'


            MDLabel: # Title Label
                id: title
                text: 'ACCOUNTING OFFICE AND FINANCE OFFICE'
                font_name: 'Poppins'
                font_size: '40sp'
                text_color: 1, 1, 1, 1
                pos_hint: {'center_x': .5, 'center_y': 0.5}
                halign: 'center'


