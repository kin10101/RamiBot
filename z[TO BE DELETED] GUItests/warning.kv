MDScreen:
    name: 'warning_content'
    auto_dismiss: False
    MDFloatLayout:
        orientation: 'vertical'
        Image:
            source: 'Assets/warning.png'
            allow_stretch: True
            keep_ratio: False
            size_hint_y: 1  # Adjust the size of the image
            pos_hint: {'center_x':0.5}

        MDBoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_y':0.15}
            size_hint_y: 0.2  # Adjust the size of the buttons
            padding: [10, 0]  # Add padding to the button layout
            spacing: 10  # Add spacing between buttons

            MDRaisedButton:
                text: "OK"
                size_hint_x: 0.5  # Adjust the size of the button
                background_color: .003, .4, .6, 1
                on_press:
                    app.warning_ok_button()